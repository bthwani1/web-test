{
  "name": "rahla-store",
  "version": "1.0.0",
  "description": "Rahla Store - متجر إلكتروني متكامل",
  "type": "module",
  "scripts": {
    "create-admin": "node create-admin.js",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "e2e:debug": "npx playwright test --debug",
    "dev": "echo 'Starting development server with environment variables'",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "mkdir -p dist && cp -r *.html *.css *.js *.json *.xml *.txt *.webmanifest admin/ assets/ dist/",
    "build:backend": "mkdir -p dist/backend && cp -r backend/* dist/backend/",
    "config:check": "node check-env.js",
    "env:check": "node check-env.js",
    "test:accessibility": "node test-accessibility.js",
    "test:performance": "node test-performance.js",
    "test:all": "npm run test:accessibility && npm run test:performance",
    "test:security": "node security-headers.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "pa11y": "^7.0.0",
    "@lhci/cli": "^0.12.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "morgan": "^1.10.0"
  },
  "keywords": [
    "ecommerce",
    "store",
    "rahla",
    "pwa",
    "nodejs",
    "mongodb"
  ],
  "author": "Rahla Team",
  "license": "MIT"
}